<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    tools:context=".Questionss"
    android:background="@color/primary">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:titleCentered="true"
        app:title="Question 1"
        app:titleTextColor="@color/white" />

    <ImageView
        android:id="@+id/queImg"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/gangstalker"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/queTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Something is wrong..."
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="28sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/secondary"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!--                Options-->

            <RadioGroup
                android:id="@+id/rgOptions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Answer 1"
                    android:textSize="20sp"
                    android:checked="false"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:layout_marginBottom="5dp">

                </com.google.android.material.radiobutton.MaterialRadioButton>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Answer 2"
                    android:textSize="20sp"
                    android:checked="false"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:layout_marginBottom="5dp">

                </com.google.android.material.radiobutton.MaterialRadioButton>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb3"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Answer 3"
                    android:textSize="20sp"
                    android:checked="false"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white">

                </com.google.android.material.radiobutton.MaterialRadioButton>

            </RadioGroup>

            <!--                ProgressBar-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/proggers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:max="3"
                    android:progress="1"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progressTint="@color/primaryDark"
                    android:progressBackgroundTint="@color/black"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/proggerstxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/3"
                    android:textColor="@color/primaryDark"
                    android:textStyle="bold"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:paddingVertical="15dp"
                android:text="Next"
                android:textColor="@color/primary"
                android:textSize="21sp"
                app:cornerRadius="30dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>